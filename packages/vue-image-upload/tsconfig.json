{
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./dist/",
        "newLine": "lf",
        "types": [
            "node",
            "vue"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths",
                "exclude": [
                    "*"
                ]
            }
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    }
}
