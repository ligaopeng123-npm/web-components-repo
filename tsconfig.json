{
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "/dist",
        "rootDir": "./",
        "baseUrl": "./packages",
        "module": "esnext",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "noUnusedParameters": false,
        "paths": {
            "@gaopeng123/message": [
                "./packages/message/src"
            ]
        }
    }
}
